    {{"coloriste : "}}{{book.coloriste.prenom}}</br>
                        {{book.coloriste.nom}}</br>

                        {%endif%}
{% if not book.scenariste == NULL %}
    {{"scenariste : "}}{{book.scenariste.prenom}}</br>
                        {{book.scenariste.nom}}</br>

                        {%endif%}


{% extends 'base.html.twig' %}
{% block body %}

{% if app.user and is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") %}
    <h1>Modification/Visualisation des données de l'utilisateur</h1>
    <nav>
        <ul>
            <li><a href=" {{ path('modify_data_user') }} ">Modifier mes données personnelles</a></li>
            <li><a href=" {{ path('modify_pass_user') }} ">Modifier mon mot de passe</a></li>
            <li><a href="">Consulter mon historique</a></li>
            <li><a href="">Payer une amende</a></li>
            <li><a href=" {{ path('delete_user') }} ">Me désabonner</a></li>
        </ul>
    </nav>
{% else %}
    <p>Vous n'êtes pas connecté</p>
    <a href=" {{ path('home') }} ">Retour à la page d'accueil</a>
{% endif %}

{% endblock %}